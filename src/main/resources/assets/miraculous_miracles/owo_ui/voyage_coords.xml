<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text translate="true">screen.miraculous_miracles.voyage_coords</text>

                            <margins>
                                <bottom>10</bottom>
                            </margins>
                        </label>

                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">text.miraculous_miracles.voyage.x_coordinate</text>

                                    <margins>
                                        <right>5</right>
                                    </margins>
                                </label>

                                <text-box id="x">
                                    <sizing>
                                        <horizontal method="fixed">
                                            150
                                        </horizontal>
                                    </sizing>

                                    <text>0</text>
                                </text-box>

                            </children>

                            <vertical-alignment>center</vertical-alignment>

                            <margins>
                                <bottom>10</bottom>
                            </margins>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">text.miraculous_miracles.voyage.y_coordinate</text>

                                    <margins>
                                        <right>5</right>
                                    </margins>
                                </label>

                                <text-box id="y">
                                    <sizing>
                                        <horizontal method="fixed">
                                            150
                                        </horizontal>
                                    </sizing>

                                    <text>0</text>
                                </text-box>

                            </children>

                            <vertical-alignment>center</vertical-alignment>

                            <margins>
                                <bottom>10</bottom>
                            </margins>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">text.miraculous_miracles.voyage.z_coordinate</text>

                                    <margins>
                                        <right>5</right>
                                    </margins>
                                </label>

                                <text-box id="z">
                                    <sizing>
                                        <horizontal method="fixed">
                                            150
                                        </horizontal>
                                    </sizing>

                                    <text>0</text>
                                </text-box>

                            </children>

                            <vertical-alignment>center</vertical-alignment>

                            <margins>
                                <bottom>10</bottom>
                            </margins>
                        </flow-layout>

                        <button id="submit">
                            <text>âœ”</text>
                        </button>
                    </children>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>

                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent />
            </surface>
        </flow-layout>
    </components>
</owo-ui>
