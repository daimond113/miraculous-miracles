<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text translate="true">screen.miraculous_miracles.multitude_amount</text>

                            <margins>
                                <bottom>10</bottom>
                            </margins>
                        </label>

                        <discrete-slider min="2" max="16" id="amount-slider">
                            <decimal-places>0</decimal-places>

                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>

                            <margins>
                                <bottom>10</bottom>
                            </margins>
                        </discrete-slider>

                        <button id="submit">
                            <text>âœ”</text>
                        </button>
                    </children>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>

                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
